{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "paths": {
            "@shri/ui-kit": ["packages/ui-kit/src"],
            "@shri/playwright": ["packages/playwright/src"],
            "@app-types/*": ["src/types/*"],
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@pages/*": ["src/pages/*"],
            "@store/*": ["src/store/*"],
            "@styles/*": ["src/styles/*"],
            "@utils/*": ["src/utils/*"],
            "@tests/*": ["tests/*"]
        }
    },
    "include": ["src", "tests", "packages/ui-kit/src", "packages/playwright/src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
