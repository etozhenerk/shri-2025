{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "paths": {
            "@shri/ui-kit/*": ["packages/ui-kit/src/*"],
            "@shri/playwright": ["packages/playwright/src"],
            "@api": ["src/api"],
            "@app-types/*": ["src/types/*"],
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@pages/*": ["src/pages/*"],
            "@store/*": ["src/store/*"],
            "@styles/*": ["src/styles/*"],
            "@utils/*": ["src/utils/*"],
            "@tests/*": ["tests/*"]
        },
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "types": ["vitest/globals"]
    },
    "include": ["src", "packages", "tests", "vitest.setup.ts", "src/types/vitest.d.ts", "src/types/jest-axe.d.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
